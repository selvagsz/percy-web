{{title "Team"}}
{{marketing/marketing-page
  transitionTo=(route-action "transitionTo")
  page=model}}

<section id="current-openings" class="container-full bg-purple-gradient-pattern py-8">
  <div class="container-md">
    <h2 class="text-2xl md:text-3xl text-center font-normal text-white mb-4">Current Openings</h2>
    <p class="alt-p text-white text-center px-5">We're always looking for awesome people that can make a positive impact at Percy. If you believe you're one of those people, get in touch! <a href="mailto:jobs@percy.io" class="text-white font-semibold alt-a">jobs@percy.io</a></p>
    <div class="current-openings-list">
      {{#each jobs as |job|}}
        <a href="{{job.hostedUrl}}" class="current-opening bg-white flex justify-between items-center p-1 pl-2 rounded">
          <div class="current-opening-title font-semibold">{{job.text}}</div>
          <div class="label-container">
            <div class="label ml-sm">{{job.categories.location}}</div>
            <div class="label ml-sm">{{job.categories.commitment}}</div>
            <div class="label ml-sm">{{job.categories.team}}</div>
          </div>
        </a>
      {{/each}}
    </div>
  </div>
</section>

{{main-footer}}
