{{#if toggle}}
  <label style="-webkit-tap-highlight-color: transparent;" class="checkbox-toggle-slider flex cursor-pointer select-none">
    <input
      type="checkbox"
      onchange={{action "updateValue"}}
      onblur={{action validateProperty}}
      checked={{shouldBeChecked}}
      data-test-checkbox-input={{testLabel}}
    >
    <span class="font-semibold mr-1">{{title}}</span>
    <div style="width: 36px; height: 20px;" class="toggle-slider relative bg-gray-100 border border-gray-200 rounded-full">
      <div style="top: 1px; left: 1px;" class="toggle-dot w-3 h-3 absolute bg-white rounded-full shadow-dark-lg"></div>
    </div>
  </label>
{{else}}
  <label>
    <span class="label-body">{{title}}</span>
    <input
      type="checkbox"
      class="{{if fieldErrors 'error'}}"
      onchange={{action "updateValue"}}
      onblur={{action validateProperty}}
      checked={{shouldBeChecked}}
      data-test-checkbox-input={{testLabel}}
    >
  </label>
  {{#if fieldErrors}}
    <ul class="Form-errors">
      {{#each (get fieldErrors "validation") as |message|}}
        <li>{{message}}</li>
      {{/each}}
    </ul>
  {{/if}}
{{/if}}
