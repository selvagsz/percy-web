<label>
  <span class="label-body">
    {{title}}
    {{#if hint}}<span class="text-gray-300">({{hint}})</span>{{/if}}
  </span>
  {{#if subtitle}}
    <div class="mb-1 text-gray-400">{{subtitle}}</div>
  {{/if}}
  <input
    type={{type}}
    class="form-control {{if fieldErrors 'error'}}"
    value={{get changeset property}}
    onchange={{action (mut (get changeset property)) value="target.value"}}
    oninput={{action (mut (get changeset property)) value="target.value"}}
    autofocus={{autofocus}}
    autocomplete={{autocomplete}}
    placeholder={{placeholder}}
    disabled={{disabled}}
    data-test-form-input
  >
</label>
{{#if fieldErrors}}
  <ul class="Form-errors">
    {{#each (get fieldErrors "validation") as |message|}}
      <li>{{message}}</li>
    {{/each}}
  </ul>
{{/if}}
